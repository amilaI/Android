<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/expressionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF" 
            android:maxLength="38"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewValidation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"            
            android:textAppearance="?android:attr/textAppearanceLarge"           
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countDownTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    <LinearLayout 
        android:id="@+id/linearLayout1" 
        android:layout_width="200dp" 
        android:layout_marginTop="60dp"
        android:layout_height="65dp">        
       
        <Button 
            android:id="@+id/calBtn1"             
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1" 
            style="@style/calculatorBtnsStyle"
            android:text="1" />

     
        
        <Button 
            android:id="@+id/calBtn2"            
            android:layout_width="fill_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            style="@style/calculatorBtnsStyle"            
            android:text="2" />
        
        <Button 
            android:id="@+id/calBtn3"             
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1" 
            style="@style/calculatorBtnsStyle"           
            android:text="3" />
    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/linearLayout2" 
        android:layout_width="200dp" 
        android:layout_height="65dp">        
        
        <Button 
            android:id="@+id/calBtn4" 
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1" 
            style="@style/calculatorBtnsStyle"           
            android:text="4" />
        
        <Button 
            android:id="@+id/calBtn5"
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1"   
            style="@style/calculatorBtnsStyle"         
            android:text="5" />
        
        <Button 
            android:id="@+id/calBtn6"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"    
            style="@style/calculatorBtnsStyle"       
            android:text="6" />
    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/linearLayout3" 
        android:layout_width="200dp" 
        android:layout_height="65dp">        
        
        <Button 
            android:id="@+id/calBtn7"
            android:layout_width="fill_parent"
			android:layout_height="match_parent"
            android:layout_weight="1"  
            style="@style/calculatorBtnsStyle"         
            android:text="7" />
        
        <Button 
            android:id="@+id/calBtn8"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1" 
            style="@style/calculatorBtnsStyle"           
            android:text="8" />      
        <Button 
            android:id="@+id/calBtn9"             
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1"     
           style="@style/calculatorBtnsStyle"    
            android:text="9" />
    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/linearLayout4" 
        android:layout_width="270dp" 
        android:layout_height="65dp">        
        
        <Button 
            android:id="@+id/calBtnDel"
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1"     
           style="@style/calculatorBtnsStyle"       
            android:text="DEL" />
        
        <Button 
            android:id="@+id/calBtn0"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"   
            style="@style/calculatorBtnsStyle"        
            android:text="0" />
        
        <Button 
            android:id="@+id/calBtnHash" 
            android:layout_width="fill_parent" 
            android:layout_height="match_parent"
            android:layout_weight="1"   
           style="@style/calculatorBtnsStyle"    
            android:text="#" />
        
        <Button 
            android:id="@+id/calBtnMinus"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"        
           style="@style/calculatorBtnsStyle"
            android:text="-" />
    
    </LinearLayout>

    </LinearLayout>
</LinearLayout>